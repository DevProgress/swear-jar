- var siteUrl = `http://ifihadaquarter.com`;
- var siteTitle = `If I Had a Quarter…`;
- var metaDescription = `Pledge a quarter for each time Trump tweets something… Trumpy. We’ll tally up the tweets and remind you once a week.`;
- var fbShareMsg = `I'm donating a quarter to Hillary every time Trump tweets!`;

doctype html
html(lang='en-us')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    title #{siteTitle}
    link(href='https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700', rel='stylesheet', type='text/css')
    link(href='css/main.css', rel='stylesheet', type='text/css')
    link(rel='apple-touch-icon', sizes='180x180', href='/apple-touch-icon.png')
    link(rel='icon', type='image/png', href='/favicon-32x32.png', sizes='32x32')
    link(rel='icon', type='image/png', href='/favicon-16x16.png', sizes='16x16')
    link(rel='manifest', href='/manifest.json')
    link(rel='mask-icon', href='/safari-pinned-tab.svg', color='#ef8c20')
    meta(name='theme-color', content='#ffffff')
    meta(name='description', content=metaDescription)
    meta(property='og:url', content=siteUrl)
    meta(property='og:type', content='website')
    meta(property='og:title', content=siteTitle)
    meta(property='og:description', content=metaDescription)
    meta(property='og:image', content=`${siteUrl}/img/share.png`)

    // Google analytics
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-83595614-9', 'auto');
      ga('send', 'pageview');
  body
    main.body-main
      .container-fluid
        .row
          .col-xs-12
            h1.main-header Donate a quarter to Hillary every time Trump ...
              .dropdown
                button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  span#selected-reason tweets
                  | &nbsp; &or;
                ul.dropdown-menu(aria-labelledby='dropdownMenuButton')
                  li.dropdown-item#alternate-reason interrupts Hillary
        .row
          .col-xs-12.main-content
            form#signup
              legend.form-header Sign me up!
              .form-row
                .form-group
                  label.sr-only Email address
                  input#email.form-control(type='email', name='email', placeholder='Email address', required)
                .form-submit
                  button.btn.btn-submit Pledge
              input(type='hidden', name='reason', value='tweets')
              input(type='hidden', name='amount', value='.25')
              p#invalid-email.form-message.bg-danger.hidden Please enter a valid email.
              p#server-error.form-message.bg-danger.hidden Something went wrong. Please try again.
            p
              | Pledge a quarter each time Trump <span class="reason">tweets</span>. We'll tally up the tweets and remind you weekly. Unsubscribe at any time. Emails won't be used for any other purpose. No credit card info required; donate directly through #[a(href='https://www.hillaryclinton.com') www.hillaryclinton.com].
            p
              button.btn.btn-share.share-fb(type='button', data-url=siteUrl)
                | #[img(src='/img/icon-fb.svg', alt='')] Share on Facebook
    div#pledge-count-wrapper.hidden
        span#pledge-count
        | pledges and counting
    footer.body-footer
      | Built by #[a(href='http://devprogress.us') DevProgress].
      | Image by #[a(href='https://www.flickr.com/photos/gageskidmore/8567825104') Gage Skidmore], #[a(href='https://creativecommons.org/licenses/by-sa/2.0/') CC BY-SA 2.0].
    #email-success.overlay.confirmation-container.hidden
      .confirmation-overlay.close-overlay
      .confirmation-body
        p Thanks for pledging! You'll be getting an email soon letting you know what Trump's been up to in the Twitterverse and how much we need to fight back. Until then, why not tell your friends?
        button.btn.btn-share.share-fb(type='button', data-message=fbShareMsg, data-url=siteUrl)
            | #[img(src='/img/icon-fb.svg', alt='')] Share on Facebook
        button.btn.btn-close.close-overlay &times;

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')
    script(src='https://www.gstatic.com/firebasejs/3.4.1/firebase.js')
    script(src='js/main.min.js')

